<?xml version="1.0" encoding="UTF-8"?>
<!--
 Modified from Oblivion to Gruvbox Material color scheme
 Based on kitty Gruvbox Material colors
-->

<style-scheme id="gruvbox-material" _name="Gruvbox Material" version="1.0">

  <author>Modified from Oblivion by Paolo Borelli</author>
  <_description>Dark color scheme using Gruvbox Material palette</_description>

  <!-- Gruvbox Material Palette -->
  <color name="bg"                          value="#1d2021"/>
  <color name="fg"                          value="#d4be98"/>
  <color name="cursor"                      value="#a89984"/>
  <color name="gray"                        value="#928374"/>
  <color name="dark_gray"                   value="#665c54"/>
  <color name="red"                         value="#ea6962"/>
  <color name="green"                       value="#a9b665"/>
  <color name="yellow"                      value="#d8a657"/>
  <color name="blue"                        value="#7daea3"/>
  <color name="purple"                      value="#d3869b"/>
  <color name="aqua"                        value="#89b482"/>
  <color name="orange"                      value="#e78a4e"/>
  <color name="white"                       value="#d4be98"/>
  <color name="black"                       value="#1d2021"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="fg" background="bg"/>
  <style name="selection"                   foreground="bg" background="fg"/>
  <style name="cursor"                      foreground="cursor"/>
  <style name="secondary-cursor"            foreground="dark_gray"/>
  <style name="current-line"                background="#282828"/>
  <style name="line-numbers"                foreground="dark_gray" background="black"/>
  <style name="draw-spaces"                 foreground="gray"/>
  <style name="background-pattern"          background="#282828"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="yellow"/>
  <style name="bracket-mismatch"            foreground="bg" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="fg" background="dark_gray"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="bg" background="green"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="gray"/>
  <style name="def:shebang"                 foreground="gray" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="yellow"/>
  <style name="def:string"                  foreground="yellow"/>
  <style name="def:special-char"            foreground="orange"/>
  <style name="def:special-constant"        foreground="orange"/>
  <style name="def:floating-point"          foreground="orange"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="fg" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="green" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="purple"/>
  <style name="def:error"                   foreground="bg" background="red" bold="true"/>
  <style name="def:warning"                 foreground="bg" background="orange"/>
  <style name="def:note"                    background="yellow" foreground="dark_gray" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Language specific -->
  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="red"/>
  <style name="diff:changed-line"           foreground="yellow"/>
  <style name="diff:diff-file"              foreground="green" bold="true"/>
  <style name="diff:location"               foreground="green"/>
  <style name="diff:special-case"           foreground="fg" bold="true"/>

  <style name="latex:command"               foreground="green" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>

